datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Column {
  id        String   @id @default(cuid())
  title     String
  order     Int
  tasks     Task[]
}

model Task {
  id          String   @id @default(cuid())
  title       String
  description String?
  priority    Priority
  dueDate     DateTime?
  
  columnId    String
  column      Column   @relation(fields: [columnId], references: [id])

  createdAt   DateTime @default(now())
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}
